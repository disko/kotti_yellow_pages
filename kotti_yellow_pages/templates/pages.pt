<!DOCTYPE html>
<html xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      metal:use-macro="api.macro('kotti:templates/view/master.pt')"
      i18n:domain="kotti_yellow_pages">

  <more metal:fill-slot="head-more">
    <script>window.context_url = '${request.resource_url(context)}';</script>
  </more>
  <article metal:fill-slot="content" class="yp-pages view ng-cloak"
           ng-app="kotti_yellow_pages" ng-controller="PagesCtrl"
           ng-init="branches = ${branches_json};">
    <h1>${context.title}</h1>
    <p class="description">
      ${context.description}
    </p>
    <p>
      <span i18n:translate="">Show branches</span>:
      <span ng-repeat="branch in branches">
        <input type="checkbox" ng-model="branch.visible"
               ng-change="updateFilter()" /> {{branch.title}}
      </span>
    </p>
    <div class="row">
      <div class="span6">
        <div ng-repeat="company in companies" tal:condition="False">
          <div>
            <a ng-click="company.show_details = true" ng-hide="company.show_details">
              {{company.zipcode}} {{company.city}} â€“ {{company.title}}
            </a>
          </div>
          <div ng-show="company.show_details">
            <h3>
              {{company.title}}
              <a ng-click="company.show_details = false">
                (hide details)
              </a>
            </h3>
            <p>
              {{company.street}}<br />
              {{company.zipcode}} {{company.city}}
              <span ng-show="company.country">
                <br />
                {{company.country}}
              </span>
            </p>
            <p ng-show="company.telephone || company.facsimile">
              <span ng-show="company.telephone">
                <span i18n:translate="">Telephone</span>:
                <a href="tel:{{company.telephone}}">{{company.telephone}}</a>
              </span>
              <br ng-show="company.telephone && company.facsimile" />
              <span ng-show="company.facsimile">
                <span i18n:translate="">Facsimile</span>: {{company.facsimile}}
              </span>
            </p>
            <p ng-show="company.contact_person">
              <span i18n:translate="">Contact person</span>:
              <a href="tel:{{company.contact_person}}">{{company.contact_person}}</a>
            </p>
            <p ng-show="company.url || company.email">
              <span ng-show="company.url">
                <span i18n:translate="">Web</span>:
                <a href="{{company.url}}">{{company.url}}</a>
              </span>
              <br ng-show="company.url && company.email" />
              <span ng-show="company.email">
                <span i18n:translate="">Email</span>:
                <a href="mailto:{{company.email}}">{{company.email}}</a>
              </span>
            </p>
            <hr/>
          </div>
        </div>
      </div>
      <div class="span6">
        <div id="map">
          <leaflet marker="marker" center="center" zoom="zoom" draggable="true"></leaflet>
        </div>
        <p></p>
        <p>
          <a href="${request.resource_url(context, 'add_yp_company')}"
             class="btn btn-primary" i18n:translate="">
            Add your company to this listing
          </a>
        </p>
      </div>
    </div>
    <pre tal:condition="True">
    </pre>
  </article>
</html>
